<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/breed_info_padding"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/breed_title_text_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Breed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/favorite_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/favorite_switch_margin"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/breed_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_favorite_border_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/breed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/breed_info_padding"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/breed_description_text_size"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/breed_temperament_description"
        app:layout_constraintTop_toBottomOf="@id/title_breed"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="NFkjwnfkj nwkfnwkf wnflkwej wlefnjl" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/breed_temperament_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/breed_info_padding"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/breed_description_text_size"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Fdkjf wjfjw wdjfnj" />
</androidx.constraintlayout.widget.ConstraintLayout>